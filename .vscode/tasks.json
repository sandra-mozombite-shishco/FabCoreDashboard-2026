{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Render Quarto Dashboard",
      "type": "shell",
      "command": "quarto render",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "QUARTO_PYTHON": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
        }
      },
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}